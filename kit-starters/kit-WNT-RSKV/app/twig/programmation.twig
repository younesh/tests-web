{# index.twig #}
{% extends "includes/layout.base.twig" %}
{% block pageTitle %}
    Programmation                                                                                                                                                                                                                                                                                       -
    {{siteName}}
{% endblock %}
{% block classPage %}
    page-programmation
{% endblock %}
{% block page %}
    <div class="container">
        <div
            class="row no-gutters">
            {# aside : begin  #}
            <aside class="col-aside col-md-4 col-lg-3 pr-md-3 pr-lg-4">
                <div class="filter">
                    <div class="filter_title">
                        <span>Filtre</span>
                        <a class="icon-close-white d-inline-block d-md-none"></a>
                    </div>

                    <div class="criteria criteria--stay">
                        <a class="criteria_title">
                            <span>
                                Séjour
                            </span>
                            <i class="icon-arrow-slide"></i>
                        </a>
                        <div class="criteria_content">
                            {%  include TplInputRadio with { addClass : 'sejour', options : [{label : ' 2-3 jours', value : '2-3-days' }, {label : '4 jours et +', value :'4-days-and-more' }]} %}
                        </div>
                    </div>

                    <div class="criteria criteria--closed criteria--date">


                        <a class="criteria_title">
                            <span>
                                Date
                            </span>
                            <i class="icon-arrow-slide"></i>
                        </a>
                        <div class="criteria_content">
                            <select id="" name="">
                                <option value="">
                                    Après le
                                </option>
                            </select>
                            <div class="d-flex align-items-center">
                                <input class="calendar mb-0" id="" name="" type="text">
                                <i class="icon-calendar ml-2"></i>
                            </div>


                        </div>
                    </div>

                    <div class="criteria criteria--closed criteria--Hiking-type">
                        <a class="criteria_title">
                            <span>
                                Type de randonnée

                            </span>
                            <i class="icon-arrow-slide"></i>
                        </a>
                        <div class="criteria_content">
                            {% include TplInputCheckbox with { addClass: 'type-hiking',label : 'Randonnée' } %}
                            {% include TplInputCheckbox with { addClass: 'type-nordic-walk',label : 'M. nordique' } %}
                        </div>
                    </div>
                    <div class="criteria criteria--closed criteria--Circuit">


                        <a class="criteria_title">
                            <span>
                                Circuit
                            </span>

                            <i class="icon-arrow-slide"></i>
                        </a>
                        <div class="criteria_content">
                            {% include TplInputCheckbox with { addClass: 'fixed-point',label : 'Point Fixe' } %}
                            {% include TplInputCheckbox with { addClass: 'roaming',label : 'Itinérance' } %}

                        </div>
                    </div>


                </div>
            </aside>
            {# aside : end  #}

            <div class="col-md col-main-content">
                <div class="row pt-3">
                    <div class="col">
                        <a class="button" href="list-des-journees.html">
                            Nouvelle Journée
                        </a>
                    </div>
                </div>

                <div class="row pt-3">
                    <div class="col">
                        {% set hideTDOnlyMobile ="d-none d-md-table-cell" %}
                        {% set hideOnlyMobile ="d-none d-md-inline-block" %}
