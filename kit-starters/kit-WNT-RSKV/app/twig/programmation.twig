                        <div
                            class="data-table">
                            {#  test box  #}

                            <table class="">
                                <thead>
                                    <tr>
                                        <th class="col-date">Date
                                            <a class="btn-sort"></a>
                                        </th>
                                        <th class="col-type ">Type</th>
                                        <th class="col-title">Titre</th>
                                        <th class="col-distance">
                                            <span class="{{hideOnlyMobile}}">
                                                Distance
                                            </span>
                                            <span class="{{showOnlyMobile}}">
                                                Dist.
                                            </span>

                                        </th>
                                        <th class="col-allure {{hideTDOnlyMobile}}">Allure</th>
                                        <th class="col-program {{hideTDOnlyMobile}}">Nom au programme</th>
                                        <th class="col-arrival {{hideTDOnlyMobile}}">Gare d’arrivée à l’aller</th>
                                        <th class="col-status">Statut</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-date">
                                            <span class="{{hideOnlyMobile}}">
