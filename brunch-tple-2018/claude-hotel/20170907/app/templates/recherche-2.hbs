<!DOCTYPE html>
<head>
	{{> head}}
</head>
<body>
	{{> header}}
	<div class="content recherche">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 col-md-5 col-lg-4">
                    <div class="colonne-gauche">
                        <form>
                            <div class="destination">
                                <input type="text" class="" placeholder="Destination / Nom de l'établissement" />
                            </div>
                            <div class="date2">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="date" class="arrivee" placeholder="Date de location" />
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="salles">
                                            <div class="type-salle">
                                                <select class="selectpicker" title="Type de salle">
                                                    <option>Salle de réunion</option>
                                                    <option>Salle de travail</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="nbr-personne">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label class="single">Nombre de personnes</label>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="colonne">
                                            <div class="pad">
                                                <button>-</button>
                                                <span>1</span>
                                                <button class="plus">+</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="prix clearfix">
                                <label>Prix</label>
                                <div class="slider-price">
                                    <span class="min-price"></span>
                                    <div id="slider-range"></div>
                                    <span class="max-price"></span>
                                </div>
                            </div>
                            <div class="bottom clearfix">
                                <a href="#" class="plus-filtres">Plus de filtres</a>
                                <button class="btn btn-primary btn-recherche">Rechercher</button>
                            </div>
                            <div class="filtres">
                                <div class="etoiles">
                                    <label>Type d'établissement</label>
                                    <select class="selectpicker">
                                        <option>Hôtel</option>
                                        <option>Hôtel</option>
                                        <option>Hôtel</option>
                                        <option>Hôtel</option>
                                    </select>
                                </div>
                                <div class="configuration">
                                    <label>Configuration de salle</label>
                                    <div class="liste-salle clearfix">
                                        <a href="#" class="u">En U</a>
                                        <a href="#" class="rectangulaire">Rectangulaire</a>
                                        <a href="#" class="classe">Salle de classe</a>
                                        <a href="#" class="vide">Vide pour cocktail</a>
                                        <a href="#" class="theatre">Théâtre</a>
                                    </div>
                                </div>
                                <div class="metro">
                                    <label>Métro le plus proche</label>
                                    <select class="selectpicker">
                                        <option>Bibilothèque François-Mitterand</option>
                                        <option>Bibilothèque François-Mitterand</option>
                                        <option>Bibilothèque François-Mitterand</option>
                                        <option>Bibilothèque François-Mitterand</option>
                                    </select>
                                </div>
                                <div class="equipements">
                                    <label>Equipements de la salle</label>
                                    <div class="liste-choix clearfix">
                                        <span class="choix">
                                            <input type="checkbox" id="air_conditionne" />
                                            <label for="air_conditionne">Air conditionné</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="videoprojecteur" />
                                            <label for="videoprojecteur">Vidéoprojecteur</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="tableau_blanc" />
                                            <label for="tableau_blanc">Tableau blanc</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="lumiere_du_jour" />
                                            <label for="lumiere_du_jour">Lumière du jour</label>
                                        </span>
                                    </div>
                                    <a href="#">Afficher plus <span class="caret"></span></a>
                                </div>
                                <div class="services">
                                    <label>Services de salle</label>
                                    <div class="liste-choix clearfix">
                                        <span class="choix">
                                            <input type="checkbox" id="acces_handicape" />
                                            <label for="acces_handicape">Accès handicapé</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="parking" />
                                            <label for="parking">Parking</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="accueil_concierge" />
                                            <label for="accueil_concierge">Accueil - Concierge</label>
                                        </span>
                                        <span class="choix">
                                            <input type="checkbox" id="repas" />
                                            <label for="repas">Repas</label>
                                        </span>
                                    </div>
                                    <a href="#">Afficher plus <span class="caret"></span></a>
                                </div>
                                <div class="btn-container">
                                    <button class="btn btn-annuler">Annuler</button>
                                    <button class="btn btn-filtrer">Appliquer les filtres</button>
                                </div>
                            </div>
                        </form>
                        <div class="resultats">
                            <p>63 résultats</p>
                            <div class="tri">
                                <label>Trier par</label>
                                <select class="selectpicker">
                                    <option>Prix croissant</option>
                                    <option>Prix décroissant</option>
                                </select>
                            </div>
